<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find demo_description)/urdf/common.xacro"/>
  <xacro:include filename="$(find demo_description)/urdf/closed_link.transmission.xacro"/>

  <xacro:macro name="closed_link" params="parent *joint_origin">

    <link name="link_A">
      <visual>
        <origin xyz="1 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="2.0 0.1 0.1"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="1 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="2. 0.1 0.1"/>
        </geometry>
      </collision>
    </link>
    <link name="link_B">
      <visual>
        <origin xyz="1 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="2.0 0.1 0.1"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="1 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="2. 0.1 0.1"/>
        </geometry>
      </collision>
    </link>
    <link name="link_C">
      <visual>
        <origin xyz="1 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="2.0 0.1 0.1"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="1 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="2. 0.1 0.1"/>
        </geometry>
      </collision>
    </link>
    <link name="link_D">
      <visual>
        <origin xyz="1 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="2.0 0.1 0.1"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="1 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="2. 0.1 0.1"/>
        </geometry>
      </collision>
    </link>

    <joint name="${parent}_to_link_A" type="revolute">
      <axis xyz="0 0 1"/>
      <limit lower="${-M_PI/4}" upper="${M_PI/4}" effort="100.0" velocity="${M_PI}"/>
      <dynamics damping="0.1"/>
      <parent link="${parent}"/>
      <child link="link_A"/>
      <xacro:insert_block name="joint_origin"/>
    </joint>
    <xacro:effort_trans joint="${parent}_to_link_A"/>

    <joint name="link_A_to_link_B" type="continuous">
      <axis xyz="0 0 1"/>
      <parent link="link_A"/>
      <child link="link_B"/>
      <origin xyz="2 0 0" rpy="0 0 ${-M_PI/2}"/>
    </joint>
    <joint name="link_B_to_link_C" type="continuous">
      <axis xyz="0 0 1"/>
      <parent link="link_B"/>
      <child link="link_C"/>
      <origin xyz="2 0 0" rpy="0 0 ${-M_PI/2}"/>
    </joint>
    <joint name="link_C_to_link_D" type="continuous">
      <axis xyz="0 0 1"/>
      <parent link="link_C"/>
      <child link="link_D"/>
      <origin xyz="2 0 0" rpy="0 0 ${-M_PI/2}"/>
    </joint>

  </xacro:macro>
</robot>
