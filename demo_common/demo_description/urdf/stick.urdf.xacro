<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="stick" params="parent suffix *joint_origin">

    <link name="stick_${suffix}">
      <visual>
        <origin xyz="1 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="2.0 0.1 0.1"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="1 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="2. 0.1 0.1"/>
        </geometry>
      </collision>
    </link>

    <joint name="${parent}_to_stick_${suffix}" type="continuous">
      <axis xyz="0 1 0"/>
      <parent link="${parent}"/>
      <child link="stick_${suffix}"/>
      <xacro:insert_block name="joint_origin"/>
    </joint>

  </xacro:macro>
</robot>
